<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.bouncingballs.MainActivity">

    <com.example.bouncingballs.BouncingBalls
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:circleRadius="10dp"
        app:circleXPosition="20dp"
        app:circleYPosition="20dp"
        app:circleRightEdge="300dp"
        app:circleYSpeed="5dp"
        app:circleXSpeed="5dp"
        app:circleColor="#619e21"/>

    <com.example.bouncingballs.BouncingBalls
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:circleRadius="5dp"
        app:circleXPosition="20dp"
        app:circleYPosition="40dp"
        app:circleRightEdge="70dp"
        app:circleXSpeed="2dp"
        app:circleColor="#ff6f00"/>

    <com.example.bouncingballs.BouncingBalls
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:circleRadius="8dp"
        app:circleXPosition="40dp"
        app:circleYPosition="100dp"
        app:circleRightEdge="300dp"
        app:circleXSpeed="1dp"
        app:circleColor="#f90804"/>

    <com.example.bouncingballs.BouncingBalls
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:circleRadius="15dp"
        app:circleXPosition="100dp"
        app:circleYPosition="100dp"
        app:circleYSpeed="2dp"
        app:circleColor="#8b5ded"/>

    <com.example.bouncingballs.BouncingBalls
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:circleRadius="30dp"
        app:circleXPosition="180dp"
        app:circleYPosition="180dp"
        app:circleYSpeed="5dp"
        app:circleColor="#aeea09"/>

</RelativeLayout>
